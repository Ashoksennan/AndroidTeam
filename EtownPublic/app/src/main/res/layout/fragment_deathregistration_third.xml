<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li_parent_lay"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/et_stateName"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="State"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic" />

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:id="@+id/et_districtName"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="District"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"
                    />
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:id="@+id/et_town_village"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="Town or Village"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/georgia"
                        android:hint="Town / Village Name"
                        android:inputType="text"
                        android:focusable="true"
                        android:id="@+id/et_town_villageName"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/fragment_body_text_size"
                        android:textStyle="italic"

                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:id="@+id/et_religion"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="Religion"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    />


               <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:focusable="false"
                    android:id="@+id/et_Deceased_occ"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="Occupation of Deceased"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    />
              <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/et_type_atten_death"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="Type of Attention Received from death"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    />
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:id="@+id/et_act_disease"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/georgia"
                    android:hint="Name of Disease or Actual Cause of Death"
                    android:inputType="none"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/fragment_body_text_size"
                    android:textStyle="italic"


                    />
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="Was the cause of death medically cerified"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="4dp"
                            android:id="@+id/tv_medically_certify_no"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:background="@drawable/ed_border_box_selected"
                            android:text="No"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:id="@+id/tv_medically_certify_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_border_box"
                            android:text="Yes"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="In Case this is a Female Death, Did the Death Occur While Pregnant,at the time of Delivery or Within 6 Weeks after the end of Pregnancy"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="4dp"
                            android:id="@+id/tv_death_occur_pregnant_no"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="#ffffff"
                            android:background="@drawable/ed_border_box_selected"/>
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:id="@+id/tv_death_occur_pregnant_yes"
                            android:layout_width="match_parent"
                            android:background="@drawable/ed_border_box"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                           />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="If Used to Habitually Chew Tobacco in any form"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_Chew_Tobacco_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="#ffffff"
                                android:background="@drawable/ed_border_box_selected"
                               />
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:id="@+id/tv_Chew_Tobacco_yes"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:background="@drawable/ed_border_box"
                               />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/tv_year_Chew_Tobacco"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:id="@+id/et_year_Chew_Tobacco"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:background="@drawable/edittext_background"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Years" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="If Used to Habitually Smoke"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_smoke_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="#ffffff"
                                android:background="@drawable/ed_border_box_selected"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:id="@+id/tv_smoke_yes"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:background="@drawable/ed_border_box"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/tv_year_smoking"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="year"
                                android:text="0"
                                android:id="@+id/et_year_smoking"
                                android:background="@drawable/edittext_background"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Years" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="If Used to Habitually Chew arecaunt in any form (Including Panmasala)"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_Chew_arecaunt_no"
                                android:textColor="#ffffff"
                                android:background="@drawable/ed_border_box_selected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No" />
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/ed_border_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:id="@+id/tv_Chew_arecaunt_yes"
                               />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/tv_year_Chew_arecaunt"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:id="@+id/et_year_Chew_arecaunt"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="year"
                                android:text="0"
                                android:background="@drawable/edittext_background"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Years" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/hoefler_text"
                        android:text="If Used to Habitually Drink Alcohol"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_alcohol_no"
                                android:background="@drawable/ed_border_box_selected"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_alcohol_yes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:background="@drawable/ed_border_box"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/tv_year_alcohol"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="year"
                                android:id="@+id/et_year_alcohol"
                                android:background="@drawable/edittext_background"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="4dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Years" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/buttonBackgroundColor"
            android:fontFamily="@font/georgia"
            android:text="Submit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_body_text_size"
            android:textStyle="italic|bold" />
    </LinearLayout>
</ScrollView>